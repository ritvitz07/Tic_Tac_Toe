    "tasks": [
      {
        "label": "Build",
        "type": "shell",
        "command": "cd \"${fileDirname}\" && g++ \"${fileBasename}\" -o \"${fileBasenameNoExtension}\" && \"${fileBasenameNoExtension}\" ",
        "presentation": { "clear": true },
        "options": {
          "shell": {
            "executable": "C:\\Windows\\System32\\cmd.exe",
            "args": ["/d", "/c"]
          }
        }
      }
    ]
  }